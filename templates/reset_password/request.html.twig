{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
        <div class="login_register_wrap section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-6 col-md-10">
                        <div class="login_wrap">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h3>Réinitialisation du mot de passe</h3>
                                </div>
                                <div class="content">
                                    <div class="message-flash">
                                        {% for flash_error in app.flashes('reset_password_error') %}
                                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                        {% endfor %}
                                    </div>
                                    {{ form_start(requestForm) }}
                                        {{ form_row(requestForm.email) }}
                                        <div>
                                            <small>
                                                Saisissez votre adresse électronique et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                                            </small>
                                        </div>

                                        <button class="btn btn-fill-out btn-block">Réinitialiser mon mot de passe</button>
                                    {{ form_end(requestForm) }}
                                </div>
                                <div class="form-note text-center">Vous n'avez pas de compte? <a href="{{ path('register')}}">S'inscrire</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
