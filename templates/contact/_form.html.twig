<div class="section pt-10">
	<div class="container">
    	<div class="row">
        	<div class="col-lg-12">
            	<div class="heading_s1 text-center p-4">
                	<h2>Contactez-nous</h2>
                    {{ form_start(form)}}
                        <div class="row pt-4">
                            <!-- message flash message envoyé-->
                            {% for message in app.flashes('contact_success') %}
                                <div class="col-md-12 alert alert-success alert-dismissible fade show" role="alert"> {{ message }}
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('contact_error') %}
                                <div class="col-md-12 alert alert-danger alert-dismissible fade show" role="alert"> {{ message }}
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            {% endfor %}
                            <!-- champs du formulaire de contact-->
                            <div class="form-group col-md-6">
                                {{ form_row(form.name, {"label":"Nom "}) }}
                             </div>
                            <div class="form-group col-md-6">
                                {{ form_row(form.email , {"label":"Email "}) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_row(form.phone , {"label":"N° de téléphone "}) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_row(form.subject, {"label":"Sujet "}) }}
                            </div>
                            <div class="form-group col-md-12">
                                {{ form_row(form.content, {"label":"Votre message :"}) }}
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-fill-out">{{ button_label|default('Envoyer') }}</button>
                            </div>

                        </div>
                    {{ form_end(form)}}
                </div>
            </div>

        </div>
    </div>
</div>