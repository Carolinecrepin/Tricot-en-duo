{% extends 'base.html.twig' %}

{% block title %}Address{% endblock %}

{% block body %}
    <h1>Adresse</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ address.id }}</td>
            </tr>
            <tr>
                <th>Nom d'utilisateur</th>
                <td>{{ address.fullname }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ address.company }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ address.address }}</td>
            </tr>
            <tr>
                <th>Complément</th>
                <td>{{ address.complement }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ address.phone }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ address.city }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ address.codePostal }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ address.country }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_address_index') }}">Retour à la liste</a>

    <a href="{{ path('app_address_edit', {'id': address.id}) }}">éditer</a>

    {{ include('address/_delete_form.html.twig') }}
{% endblock %}
