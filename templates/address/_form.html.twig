<!-- champs du formulaire de nouvelle adresse-->
{{ form_start(form) }}
    <div class="form-group col-md-12">
        {{ form_row(form.fullname, {"label":"Nom complet "}) }}
    </div>
    <div class="form-group col-md-12">
        {{ form_row(form.company, {"label":"Nom d'entreprise "}) }}
    </div>
    <div class="form-group col-md-12">
        {{ form_row(form.address, {"label":"Adresse "}) }}
    </div>
    <div class="form-group col-md-12">
        {{ form_row(form.complement, {"label":"Complément d'adresse "}) }}
    </div>
    <div class="form-group col-md-12">
        {{ form_row(form.phone, {"label":"Téléphone "}) }}
    </div>
    <div class="form-group col-md-12">
        {{ form_row(form.city, {"label":"Ville "}) }}
    </div>
    <div class="form-group col-md-12">
        {{ form_row(form.codePostal, {"label":"Code postal "}) }}
    </div>
    <div class="form-group col-md-12">
        {{ form_row(form.country, {"label":"Pays "}) }}
    </div>
    
    <button class="btn btn-border-fill btn-block">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
