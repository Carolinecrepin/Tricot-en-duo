{% extends 'base.html.twig' %}

{% block title %}Checkout TricotenDuo{% endblock %}

{% block body %}
<div class="section">
	<div class="container">
        {{ form_start(checkout, {action: path('checkout_confirm')})}}
        <div class="row">
        	<div class="col-md-6">
                <div class="heading_s1">
                        <h4>Votre adresse de livraison</h4>
                        <div class="content">
                            {{ form_widget(checkout.address) | replace({'[spr]' : '<br>)'}) | raw}}
                        </div>
                        <a href="{{ path('address_new')}}" class="btn btn-fill-out btn-block mt-1"> Ajouter une nouvelle adresse</a>
                </div>
                <div class="heading_s1">
                    <h4>Votre transporteur</h4>
                    <div class="content">
                        {{ form_widget(checkout.carrier) | replace({'[spr]' : '<br>)'}) | raw}}
                    </div>
                </div>
                <div class="heading_s1">
                    <h4>Informations compl√©mentaires</h4>
                    <div class="form-group mb-0">
                        {{ form_widget(checkout.informations) | replace({'[spr]' : '<br>)'}) | raw}}
                    </div>
                </div>
          </div>

          <div class="col-md-6">
                <div class="order_review">
                    <div class="heading_s1">
                        <h4>Your Orders</h4>
                    </div>
                    <div class="table-responsive order_table">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for element in cart.products %}
                                <tr>
                                    <td><span class="product-qty">{{ element.quantity }}</span> {{ element.product.name }}</td>
                                    <td>$ {{ element.product.price/100 }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>SubTotal HT</th>
                                    <td class="product-subtotal">${{ cart.data.subTotalHT }}</td>
                                </tr>
                                <tr>
                                    <th>Taxe</th>
                                    <td class="product-subtotal">${{ cart.data.Taxe }}</td>
                                </tr>
                                <tr>
                                    <th>Total</th>
                                    <td class="product-subtotal">${{ cart.data.subTotalTTC }}</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="payment_method">
                        <div class="heading_s1">
                            <h4>Payment</h4>
                        </div>

                    </div>
                    <button type="submit" id="checkout-button" class="btn btn-fill-out btn-block">Place Order</button>
                </div>
          </div>
        </div>
        {{ form_end(checkout)}}
    </div>
</div>
{% endblock %}

